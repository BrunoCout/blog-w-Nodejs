{{#if user}}
<div class="jumbotron">
  <h1 class="display-4">Bem-vindo ao Blog do Node</h1>
  <p class="lead">Blog simples usando Mongodb e Node.js</p>
  <hr class="my-4">
</div>
{{else}}
<div class="jumbotron">
  <h1 class="display-4">Bem-vindo ao Blog do Node</h1>
  <p class="lead">Blog simples usando Mongodb e Node.js</p>
  <hr class="my-4">
  <p>Crie uma conta para saber mais</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="/usuarios/registro" role="button">Criar conta</a>
  </p>
</div>
{{/if}}

<hr>

<h2>Postagens recentes</h2>


{{#each postagens}}
<div class="card">
    <div class="card-body mt-4">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Ler mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small>
        <br>
        <small>Data de publicação: {{data}}</small>
        
        
    </div>
</div>
{{else}}
    <h5>Nenhuma postagem</h5>
{{/each}}
